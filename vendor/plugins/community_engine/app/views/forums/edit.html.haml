.box
  %h3= 'Edit Forum'.l
  
  %p= link_to 'Delete this forum'.l, forum_path(@forum), :method => :delete, :class => "utility", :confirm => _("Are you sure?")
  - form_for :forum, :url  => forum_path(@forum), :html => { :class => "MainForm", :method => :put } do |f|
    = render :partial => "form", :object => f
    %p= submit_tag 'Save Forum'.l, :or => link_to('Cancel'.l, forums_path)


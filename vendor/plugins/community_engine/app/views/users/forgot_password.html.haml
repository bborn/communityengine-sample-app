.yui-b.sidebar
  =render :partial => 'shared/login_sidebar'
  
#yui-main
  .yui-b.main_column
    .box
      %h3="Forgot your passowrd?".l

      - form_tag '/forgot_password', :class => 'MainForm' do
        %label{"for"=>"email"}="Enter your email address:".l
        = text_field_tag 'login', nil, :size => 35
        %p
          = submit_tag 'Reset my password'.l
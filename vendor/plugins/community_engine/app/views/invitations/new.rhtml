<h1>New invitation from <%= @user.login %></h1>

<%= error_messages_for :invitation %>

<% form_for(:invitation, :url => user_invitations_path) do |f| %>
<p><label for="email_addresses">Email Addresses</label><br/>
<%= f.text_area :email_addresses %></p>
<p><label for="message">Message</label><br/>
<%= f.text_area :message %></p>
  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', user_path(@user) %>